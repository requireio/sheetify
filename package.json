{
  "name": "sheetify",
  "version": "2.0.0",
  "description": "Modular CSS bundler",
  "scripts": {
    "deps": "dependency-check . && dependency-check . --extra --no-dev",
    "test": "standard && npm run deps && faucet test/*.js",
    "test:cov": "standard && npm run deps && NODE_ENV=test istanbul cover test/*.js",
    "format": "standard --format"
  },
  "bin": {
    "sheetify": "bin/cli.js"
  },
  "repository": "sheetify/sheetify",
  "keywords": [
    "modular",
    "css",
    "bundle",
    "browserify",
    "css-modules"
  ],
  "license": "MIT",
  "dependencies": {
    "cliclopts": "^1.1.1",
    "minimist": "^1.2.0",
    "style-deps": "^2.0.1",
    "xtend": "^2.1.2"
  },
  "devDependencies": {
    "dependency-check": "^2.5.0",
    "faucet": "^0.0.1",
    "istanbul": "^0.3.19",
    "standard": "^5.2.1",
    "tape": "^2.4.2",
    "wrap-selectors": "^0.1.0"
  }
}
